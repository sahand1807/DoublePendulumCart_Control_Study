<mujoco model="double_pendulum_cart">
  <compiler angle="radian" inertiafromgeom="false" coordinate="local"/>
  
  <option timestep="0.01" gravity="0 0 -9.81" integrator="RK4">
    <flag contact="disable" energy="enable"/>
  </option>
  
  <default>
    <geom rgba="0.8 0.6 0.4 1"/>
    <joint damping="0"/>
  </default>
  
  <visual>
    <global offwidth="640" offheight="480"/>
    <quality shadowsize="4096"/>
  </visual>
  
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.6 0.7 0.8" rgb2="0.2 0.3 0.4" width="512" height="512"/>
  </asset>
  
  <worldbody>
    <!-- Lighting -->
    <light directional="true" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" pos="0 0 4" dir="0 0 -1"/>
    
    <!-- Simple rail track (visual only) -->
    <geom name="rail" type="box" size="2.5 0.03 0.02" pos="0 0 0.5" 
          rgba="0.2 0.2 0.2 1" contype="0" conaffinity="0"/>
    
    <!-- Track limits -->
    <geom name="limit_left" type="box" size="0.03 0.05 0.06" pos="-2.5 0 0.5" 
          rgba="0.8 0.2 0.2 0.7" contype="0" conaffinity="0"/>
    <geom name="limit_right" type="box" size="0.03 0.05 0.06" pos="2.5 0 0.5" 
          rgba="0.8 0.2 0.2 0.7" contype="0" conaffinity="0"/>
    
    <!-- Cart (M_cart = 1.0 kg) -->
    <body name="cart" pos="0 0 0.5">
      <joint name="slider" type="slide" axis="1 0 0" limited="true" range="-2 2" damping="0"/>
      <geom name="cart_body" type="box" size="0.2 0.15 0.08" rgba="0.3 0.5 0.8 1" mass="0"/>
      <inertial pos="0 0 0" mass="1.0" diaginertia="0.01 0.01 0.01"/>
      
      <!-- First Pendulum: m1=0.3kg, l1=0.5m, COM at lc1=0.25m from pivot, I1=0.01 -->
      <body name="pole1" pos="0 0 0.08">
        <joint name="hinge1" type="hinge" axis="0 1 0" limited="false" damping="0"/>
        
        <!-- Visual geometry -->
        <geom name="pole1_rod" type="capsule" fromto="0 0 0 0 0 -0.5" 
              size="0.025" rgba="0.9 0.3 0.3 1" contype="0" conaffinity="0" mass="0"/>
        
        <!-- CRITICAL: Inertial properties matching your analytical model -->
        <!-- mass = m1 = 0.3 kg -->
        <!-- COM at lc1 = 0.25m from pivot (LOCAL coordinates: 0 0 -0.25) -->
        <!-- Inertia about COM = I1 = 0.01 kg⋅m² -->
        <inertial pos="0 0 -0.25" mass="0.3" diaginertia="0.01 0.01 0.0001"/>
        
        <!-- Second Pendulum: m2=0.2kg, l2=0.4m, COM at lc2=0.2m from joint, I2=0.008 -->
        <body name="pole2" pos="0 0 -0.5">
          <joint name="hinge2" type="hinge" axis="0 1 0" limited="false" damping="0"/>
          
          <!-- Visual geometry -->
          <geom name="pole2_rod" type="capsule" fromto="0 0 0 0 0 -0.4" 
                size="0.02" rgba="0.3 0.9 0.3 1" contype="0" conaffinity="0" mass="0"/>
          <geom name="tip" type="sphere" pos="0 0 -0.4" size="0.04" 
                rgba="0.95 0.85 0.1 1" contype="0" conaffinity="0" mass="0"/>
          
          <!-- CRITICAL: Inertial properties matching your analytical model -->
          <!-- mass = m2 = 0.2 kg -->
          <!-- COM at lc2 = 0.2m from joint (LOCAL coordinates: 0 0 -0.2) -->
          <!-- Inertia about COM = I2 = 0.008 kg⋅m² -->
          <inertial pos="0 0 -0.2" mass="0.2" diaginertia="0.008 0.008 0.0001"/>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <!-- Motor with gear=1 means force is directly applied -->
    <motor joint="slider" gear="1" ctrllimited="true" ctrlrange="-20 20"/>
  </actuator>
  
  <sensor>
    <jointpos name="cart_pos" joint="slider"/>
    <jointpos name="pole1_pos" joint="hinge1"/>
    <jointpos name="pole2_pos" joint="hinge2"/>
    <jointvel name="cart_vel" joint="slider"/>
    <jointvel name="pole1_vel" joint="hinge1"/>
    <jointvel name="pole2_vel" joint="hinge2"/>
  </sensor>
</mujoco>